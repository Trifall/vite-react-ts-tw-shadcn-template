{
	"name": "vite-react-ts-tw-shadcn-template",
	"version": "1.0.1",
	"type": "module",
	"description": "A template with Vite, React, TypeScript, TailwindCSS, and ShadCN UI.",
	"author": {
		"name": "Jerren Trifan",
		"email": "Jerren@trifall.com"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"serve": "vite preview",
		"lint:fix": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --cache --fix --ignore-path ./.gitignore",
		"lint:format": "prettier --ignore-path .gitignore --log-level warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
		"lint": "yarn lint:fix && yarn lint:format ",
		"pipeline": "yarn && yarn type-check && yarn lint && yarn build",
		"type-check": "tsc --noEmit",
		"prepare": "husky install"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.0.2",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"lucide-react": "^0.269.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^1.14.0",
		"tailwindcss-animate": "^1.0.6"
	},
	"devDependencies": {
		"@types/node": "^20.5.6",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitejs/plugin-react-swc": "^3.3.2",
		"autoprefixer": "^10.4.15",
		"depcheck": "^1.4.5",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"husky": ">=6",
		"lint-staged": ">=10",
		"postcss": "^8.4.28",
		"prettier": "^3.0.2",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.0.2",
		"vite": "^4.4.5"
	},
	"license": "MIT",
	"packageManager": "yarn@3.6.3"
}
